<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success mb-4" >Nova categoria</button>
</a>
<br>

{{#each categorias }}
    <div class="card">
        <div class="card-body">
            <h4> Nome: {{nome}} </h4>
            <small> Slug: {{slug}} </small> <br> 
            <small>Data de criação: {{date}} </small> <br>
             <a href="/admin/categorias/edit/{{_id}}">  <button class="btn btn-warning mt-4"> Editar categoria</button> </a>
             <form action="/admin/categorias/deletar" method="POST">
                 <input type="hidden" name="id" value="{{_id}}">
                 <button type="submit" class="btn btn-danger mt-2"> Excluir Categoria </button>
             </form>

        </div>
    </div>
{{else}}
    <h4 class="mt-4" >Nenhuma categoria cadastrada!</h4>
{{/each}}