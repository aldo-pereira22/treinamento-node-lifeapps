<h1>Usuários Cadastrados: </h1>
<div class="container">
    {{#each users}}
        <div class="item">
            <p> Nome: {{this.name}} </p>
            <p> Profissão: {{this.ocupation}} </p>
            <div class="actions">
                <a href="/users/{{this.id}}">Ver detalhes</a>
                <form action="/users/delete/{{this.id}}" method="POST" class="details-btn">
                    <input type="submit" value="Excluir" class="delete-btn">
                </form>
            </div>
        </div>
    {{/each}}
</div>