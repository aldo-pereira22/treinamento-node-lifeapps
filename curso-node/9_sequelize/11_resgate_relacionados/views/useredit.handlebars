<h1>Editando {{user.name}} </h1>

<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}"> <br>
    <div class="form-control">
        <label for="name"> Nome:</label>
        <input type="text" name="name" id="" placeholder="Digite o nome do usuário" value="{{user.name}}" >
    </div>
        <div class="form-control">
        <label for="ocupation"> Ocupation: </label>
        <input type="text" name="ocupation" id="" placeholder="Digite a profissão" value="{{user.ocupation}}" >
    </div>
        <div class="form-control from-checkbox">
            {{#if user.newsletter}}
                <input type="checkbox" name="newsletter" id="" checked>
            {{else}}
                <input type="checkbox" name="newsletter" id="">
            {{/if}}

        <label for="newsletter"> Enviar Promoções ?</label>
    </div>
    <input type="submit" value="Editar" name="" id="">
</form>

<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" id="" placeholder="Digite a rua onde mora">
        </div>
        
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" id="" placeholder="Digite o número da residencia">
        </div>
        
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" id="" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Incluir endereço">
    </form>
    <div class="address-list">
        <h2>Lista de Endereços</h2>
        {{#each user.Addresses}}
            <p>#{{this.id}} -  {{this.street}} - {{this.number}} - {{this.city}}</p>

        {{/each}}
    </div>
</div>

