<h1>Editando a tarefa: {{this.title}}</h1>
<form action="/tasks/add/{{this.id}}" method="POST">
    <input type="hidden" name="id" value="{{this.id}}">
    <div class="form-control">
        <label for="title"> Título: </label>
        <input type="text" name="title" placeholder="O que vc vai fazer?" value="{{this.title}}">
    </div>
    <div class="form-control">
        <label for="description"> Descrição: </label>
        <textarea name="description" placeholder="Descreva a tarefa...">{{this.description}}</textarea>
    </div>

    <input type="submit" value="Editar">
</form>